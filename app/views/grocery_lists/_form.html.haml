= simple_form_for(@grocery_list) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    
    %legend
      = "Items"
    = f.fields_for :items do |builder|
      = render 'item_fields', f: builder
    =link_to_add_fields "Add Item", f, :items

  .form-actions
    = f.button :submit
