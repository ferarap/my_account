%h1 Listing items

%table
  %tr
    %th Grocery list
    %th Name
    %th Price
    %th Units
    %th Total
    %th
    %th
    %th

  - @items.each do |item|
    %tr
      %td= item.grocery_list
      %td= item.name
      %td= item.price
      %td= item.units
      %td= item.total
      %td= link_to 'Show', item
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
